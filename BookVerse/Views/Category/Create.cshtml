@model Category

<form>
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary text-white-50">Create Category</h2>
            <hr/>
        </div>

        <div class="mb-3">
            <label>Category Name</label>
            <input type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Display Order</label>
            <input type="text" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 100px">
            Cancel
        </a>
    </div>
</form>