@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary text-white-50">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <td>Category Name</td>
                <td>Display Order</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>
                        @data.CategoryName
                    </td>
                    <td>
                        @data.DisplayOrder
                    </td>
                    <td>
                        <div>
                            <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-categoryId="@data.Id">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@data.Id">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>