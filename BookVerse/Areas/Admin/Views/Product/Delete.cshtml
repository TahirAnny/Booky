@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-white-50">Delete Product</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-0"></label>
            <input asp-for="ISBN" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-0"></label>
            <input asp-for="ListPrice" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="BulkPrice" class="p-0"></label>
            <input asp-for="BulkPrice" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="BulkPriceFifty" class="p-0"></label>
            <input asp-for="BulkPriceFifty" disabled class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="BulkPriceHundred" class="p-0"></label>
            <input asp-for="BulkPriceHundred" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width: 100px">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width: 100px">
            Cancel
        </a>
    </div>
</form>
