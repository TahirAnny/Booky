@model Product

<form method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary text-white-50">Create Product</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-0"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-0"></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="BulkPrice" class="p-0"></label>
            <input asp-for="BulkPrice" class="form-control" />
            <span asp-validation-for="BulkPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="BulkPriceFifty" class="p-0"></label>
            <input asp-for="BulkPriceFifty" class="form-control" />
            <span asp-validation-for="BulkPriceFifty" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="BulkPriceHundred" class="p-0"></label>
            <input asp-for="BulkPriceHundred" class="form-control" />
            <span asp-validation-for="BulkPriceHundred" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 100px">
            Cancel
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}